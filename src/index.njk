        {% set idPrefix = 'pre-' %}
        {% set hiddenOnLG = true %}
        {% for day, daydata in menu %}
          {% include "./includes/DayView.njk" %}
        {% endfor %} 

        {% set idPrefix = '' %}
        {% set hiddenOnLG = false %}
        {% for day, daydata in menu %}
          {% include "./includes/DayView.njk" %}
        {% endfor %} 

        {% set idPrefix = 'post-' %}
        {% set hiddenOnLG = true %}
        {% for day, daydata in menu %}
          {% include "./includes/DayView.njk" %}
        {% endfor %}
