    <!-- Loader Animation for Pull Down Refresh -->
    <div id="refresh-loader">
      <div class="spinner"></div>
    </div>

    <script>
      (function() {
        // Bus Popup Toggle
        const busToggle = document.getElementById('bus-toggle');
        const busPopup = document.getElementById('bus-popup');
        const busPopupContent = document.querySelector('.bus-popup-content');

        busToggle.addEventListener('click', () => {
          busPopup.classList.toggle('visible');
        });

        // Dismiss Popup by swiping down on its content when scrolled to top
        let startY = 0, currentY = 0, threshold = 100, isDismissing = false;
        busPopup.addEventListener('touchstart', (e) => {
          if (busPopupContent.scrollTop === 0) {
            startY = e.touches[0].clientY;
            isDismissing = true;
          } else {
            isDismissing = false;
          }
        }, { passive: true });

        busPopup.addEventListener('touchmove', (e) => {
          if (!isDismissing) return;
          currentY = e.touches[0].clientY;
          if (currentY - startY > 10) {
            e.preventDefault();
          }
        }, { passive: false });

        busPopup.addEventListener('touchend', () => {
          if (isDismissing && (currentY - startY > threshold)) {
            busPopup.classList.remove('visible');
          }
          startY = 0;
          currentY = 0;
          isDismissing = false;
        });

        // Pull Down Refresh Gesture on Main Page with Loader Animation
        const mainContent = document.querySelector('main');
        let refreshStartY = 0, refreshCurrentY = 0, refreshThreshold = 100, isRefreshingGesture = false;
        const refreshLoader = document.getElementById('refresh-loader');

        document.addEventListener('touchstart', (e) => {
          if (busPopup.classList.contains('visible')) return;
          if (window.scrollY > 0) return;
          refreshStartY = e.touches[0].clientY;
          isRefreshingGesture = true;
        }, { passive: false });

        document.addEventListener('touchmove', (e) => {
          if (!isRefreshingGesture) return;
          refreshCurrentY = e.touches[0].clientY;
          if (refreshCurrentY - refreshStartY > 0) {
            e.preventDefault();
          }
        }, { passive: false });

        document.addEventListener('touchend', () => {
          if (isRefreshingGesture && (refreshCurrentY - refreshStartY > refreshThreshold)) {
            refreshLoader.style.display = "flex";
            setTimeout(() => {
              location.reload();
            }, 500);
          }
          isRefreshingGesture = false;
          refreshStartY = 0;
          refreshCurrentY = 0;
        });

        // Bottom Swipe Gesture for Mobile:
        // Trigger if touch starts near bottom of viewport (e.g., within 50px)
        let bottomStartY = 0, bottomCurrentY = 0, bottomThreshold = 100, isBottomGesture = false;
        document.addEventListener('touchstart', (e) => {
          if (e.touches[0].clientY > window.innerHeight - 50) {
            bottomStartY = e.touches[0].clientY;
            isBottomGesture = true;
          }
        }, { passive: true });

        document.addEventListener('touchmove', (e) => {
          if (!isBottomGesture) return;
          bottomCurrentY = e.touches[0].clientY;
        }, { passive: true });

        document.addEventListener('touchend', () => {
          if (isBottomGesture && (bottomStartY - bottomCurrentY > bottomThreshold)) {
            if (!busPopup.classList.contains('visible')) {
              busPopup.classList.add('visible');
            }
          }
          isBottomGesture = false;
          bottomStartY = 0;
          bottomCurrentY = 0;
        });
      })();
    </script>
